<form method="post" action="{{ path('delete_answer', {'id': answer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ answer.id) }}">
    <button class="m-2 btn btn-light text-decoration-none">Delete</button>
</form>

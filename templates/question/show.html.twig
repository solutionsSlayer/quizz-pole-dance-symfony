{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center h-100">
    <div class="row">
        <div class="d-flex justify-content-center align-items-center col">
            <div class="card">
                <img src="{{question.image}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{question.content}}</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                <div class="d-flex justify-content-start">
                    <a class="btn btn-light text-decoration-none m-2" href="{{ path('list_question') }}">Back to list</a>
                    <a class="btn btn-light text-decoration-none m-2" href="{{ path('edit_question', {'id': question.id}) }}">edit</a>
                    {{ include('question/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
